	public void testRegister() {
		BoardVO vo = new BoardVO();
		vo.setTitle("title");
		vo.setContent("content");
		vo.setWriter("writer");
		service.register(vo);
	}
	@Test
	public void get(int bno) {
		int result = service.get(bno);
	}
	
