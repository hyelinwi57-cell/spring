package org.joozis.DI_4_annoConfig;

import java.lang.ProcessHandle.Info;
import java.util.HashSet;
import java.util.Set;

import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;

/*
 * sts3 버전에서 사용 시 해당 프로젝트에 CGLIB 라이브러리 추가
 * 
 * <dependency>
     <groupId>cglib</groupId>
       <artifactId>cglib</artifactId>
     <version>2.2.2</version>
   </dependency>
 * */
@Configuration //==applictionContext와 같은 역할을 하는 자바 클래스
public class AnnoConfig {
	
	@Bean	//Bean 만드는 메소드
	public Person human1() {
		Set<String> hobbies = new HashSet<String>();
		hobbies.add("여행");
		hobbies.add("닊시");
		hobbies.add("독서");
		
		Person person = new Person();
		person.setName("김씨");
		person.setAge(10);
		person.setHobbies();
		
	}
	//<bean id = "human2" class="org.joonzis.DI_4.Person"></bean>
	@Bean(name = "human2")
	public Person human2() {
		Set<String> hobbies = new HashSet<String>();
		hobbies.add("여행");
		hobbies.add("닊시");
		hobbies.add("독서");
		
		Person person = new Person();
		person.setName("김씨");
		person.setAge(10);
		person.setHobbies();
	
		@Bean
		public Person pInfo() {
			Set<String> hobbies = new HashSet<String>();
			hobbies.add("게임");
			hobbies.add("달리기");
			hobbies.add("웨이트");
			
			Person person = new PersonInfo();
			Info.setPerson(new Person("이씨", 30, hobbies));
			
			return info;
	
}
